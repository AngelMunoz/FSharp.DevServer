<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net7.0</TargetFramework>
    <WarnOn>3390;$(WarnOn)</WarnOn>
    <Version>0.24.1</Version>
    <IsPackable>true</IsPackable>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>perla</ToolCommandName>
    <PackageProjectUrl>https://github.com/AngelMunoz/Perla</PackageProjectUrl>
  </PropertyGroup>
  <ItemGroup>
    <Compile Include="Commands.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Argu" Version="6.1.1" />
    <PackageReference Include="FSharp.Control.AsyncSeq" Version="$(FsAsyncSeqVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Perla.Lib\Perla.Lib.fsproj" />
    <ProjectReference Include="..\Perla.Scaffolding\Perla.Scaffolding.fsproj" />
    <ProjectReference Include="..\Perla.FileSystem\Perla.FileSystem.fsproj" />
    <ProjectReference Include="..\Perla.Build.Services\Perla.Build.Services.fsproj" />
    <ProjectReference Include="..\Perla.Extensibility\Perla.Extensibility.fsproj" />
    <ProjectReference Include="..\Perla.Server\Perla.Server.fsproj" />
  </ItemGroup>

</Project>
