    "version": "0.2.0",
    "configurations": [
        {
            "name": "Perla serve",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}/sample",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Perla build",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "build"
            ],
            "cwd": "${workspaceFolder}/sample",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Perla init simple",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "init",
                "-k",
                "simple"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Perla init full",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "init",
                "-k",
                "full"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Perla serve tsx",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}/src/docs",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Perla add package",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "add",
                "lit"
            ],
            "cwd": "${workspaceFolder}/sample",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Perla add @shoelace-style/shoelace/dist/utilities/base-path.js",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "add",
                "@shoelace-style/shoelace"
            ],
            "cwd": "${workspaceFolder}/docs",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Build Docs",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "build"
            ],
            "cwd": "${workspaceFolder}/docs",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}