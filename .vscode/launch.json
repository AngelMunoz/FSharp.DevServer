{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Perla serve",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "serve"
            ],
            "cwd": "${workspaceFolder}/src/App",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "NET6 build",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net6.0/Perla.dll",
            "args": [
                "build"
            ],
            "cwd": "${workspaceFolder}/src/App",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        },
        {
            "name": "NET5 build",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/Perla/bin/Debug/net5.0/Perla.dll",
            "args": [
                "build"
            ],
            "cwd": "${workspaceFolder}/src/App",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}
